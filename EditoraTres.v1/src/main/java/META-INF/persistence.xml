<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="EditoraTres.v1">
		 <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>java:/editora3</jta-data-source>
    <class>editora3.entidades.BrindaDevolucao</class>
    <class>editora3.entidades.BrindaEntradaIten</class>
    <class>editora3.entidades.Brinde</class>
    <class>editora3.entidades.BrindeDevolucaoIten</class>
    <class>editora3.entidades.BrindeEntrada</class>
    <class>editora3.entidades.BrindeSaida</class>
    <class>editora3.entidades.BrindeSaidaIten</class>
    <class>editora3.entidades.Canal</class>
    <class>editora3.entidades.Equipe</class>
    <class>editora3.entidades.Oferta</class>
    <class>editora3.entidades.OfertaIten</class>
    <class>editora3.entidades.Subcanal</class>
    <class>editora3.entidades.Vendedor</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>  
		<property name="javax.persistence.sql-load-script-source" value="META-INF/iniciartabelas.sql"/>
    </properties>
	</persistence-unit>
</persistence>

